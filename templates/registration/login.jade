{% extends "login_base.jade" %}
{% block title %}登录{% endblock %}
{% block index %}
div#content_login_divspan4
    form#login_form#margin_left15(action !="{%url django.contrib.auth.views.login %}",method="post") {% csrf_token %}
        fieldset.control-group.success#margin_left25
            div.control-group
                div.controls
                    div.rightside_text
                        b 使用邮箱登录
            div.control-group#margin_top-5
                strong用户名&nbsp;
                label.control-label
                  //{{form.username.label_tag}}
                div.controls
                    {{ form.username }}
                    div#id_usernameTip.onShow 请输入用户名
                    {% if form.username.errors %}
                    p.errmsg#err_msg {{ form.username.errors|join:", " }}
                    {% else %}
                    p#err_msg &nbsp;
                    {% endif %}
            div#margin_top-10
                strong 密码&nbsp;
                label.control-label
                  //{{ form.password.label_tag }}
                div.controls
                    {{ form.password }}
                    div#id_passwordTip.onShow 请输入密码
                    {% if form.password.errors %}
                    p.errmsg#err_msg {{ form.password.errors|join:", " }}
                    {% else %}
                    p#err_msg &nbsp;
                    {% endif %}
                {% if login_failed %}p 用户名或密码错误。
                {% endif %}
            div#margin_top-10
                div.controls
                    label
                        input(type="checkbox",style="margin-top:-2px")
                        font(color="#7cbe31")
                            &nbsp;自动登录 |
                        a#link-forgot-passwd(href !="{% url auth_password_reset %}")忘记密码
            div#margin_top15
                div.controls
                    button.btn.btn-success#button_color(type="submit")
                        strong &nbsp;&nbsp;登&nbsp;&nbsp;&nbsp;录&nbsp;&nbsp;
{% endblock %}