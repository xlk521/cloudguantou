                        font(style="font-size:15px") 请填写证件号码
                        input.success(type="text",style="margin-left:35px")
            div
                div.controls(style="margin-left:90px")
                    label.control-label
                        font(style="font-size:15px",color="red") &lowast;&nbsp;
                        font(style="font-size:15px") 再次确认证件号码
                        input.success(type="text",style="margin-left:35px")
            div
                div.controls(style="margin-left:105px")
                    label.control-label
