                    label.control-label(style="margin-left:120px;margin-top:15px")
                        img(src="/statics/img/approve_upload.gif")
                        img(src="/statics/img/approve_upload.gif",style="margin-left:20px")
                    label.control-label(style="margin-left:115px")
                        a(href="#",style="margin-left:45px")删除
                        a(href="#",style="margin-left:105px")删除
            div
                div.controls(style="margin-left:105px")
                    label.control-label
