            div
                div.controls(style="margin-left:165px")
                    label.control-label
                        font(style="font-size:15px",color="red") &lowast;&nbsp;
                        font(style="font-size:15px") 手机号
                        input.success(type="text",style="margin-left:35px")
            div
                div.controls(style="margin-left:150px")
                    label.control-label
                        font(style="font-size:15px",color="red") &lowast;&nbsp;
                        font(style="font-size:15px") 通讯地址
                        select(style="margin-left:35px;width:130px;height:30px;background:#f7f7f7")
                            option 省/直辖市/自治区
